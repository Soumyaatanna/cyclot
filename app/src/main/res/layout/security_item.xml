<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"

    app:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:id="@+id/img1"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cid"
            android:text="Cycle ID"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img1"

            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/req_time"
            android:text="Request time"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_below="@+id/cid"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rtn_time"
            android:text="Returned time"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_below="@+id/req_time"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:id="@id/damage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtn_time"
            android:layout_toRightOf="@+id/img1"
             android:text="Damaged"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:id="@+id/approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rtn_time"
            android:layout_toRightOf="@+id/damage"
            android:text="Approved"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>